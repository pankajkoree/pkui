{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true
  },
  "include": [
    "cli",
    "helpers",
    "registry"
  ],
  "exclude": [
    "templates",
    "node_modules",
    "dist"
  ]
}